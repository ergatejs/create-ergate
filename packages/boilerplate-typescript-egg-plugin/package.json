{
  "name": "@ergatejs/boilerplate-typescript-egg-plugin",
  "version": "0.0.3",
  "description": "boilerplate for typescript egg-plugin",
  "scripts": {
    "lint": "eslint .",
    "ci": "npm run lint && npm run ci-boilerplate",
    "ci-boilerplate": "npm run build && npm run install-deps && cd dist && npm run lint",
    "install-deps": "cd dist && npm i",
    "clean": "rm -rf boilerplate/.idea boilerplate/logs boilerplate/node_modules boilerplate/run",
    "clean-dist": "rm -rf dist",
    "build": "npm run clean && egg-init dist --force --silent --template=./ "
  },
  "devDependencies": {
    "egg-init": "^2.2.0",
    "eslint": "^7.7.0",
    "eslint-config-egg": "^8.0.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/ergatejs/create-ergate#readme",
  "bugs": {
    "url": "https://github.com/ergatejs/create-ergate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ergatejs/create-ergate.git"
  },
  "author": "Suyi <thonatos.yang@gmail.com>"
}
